# Allow FOD to find the OnePlus display HAL hwservice.
allow vendor_fod hal_display_hwservice:hwservice_manager find;

# ALlow FOD to search through sysfs graphics directory.
allow vendor_fod vendor_sysfs_graphics:dir search;

# Allow FOD to read & write to fingerprint sysfs nodes.
allow vendor_fod vendor_sysfs_fingerprint:file rw_file_perms;

# Allow FOD to read fingerprint positions.
get_prop(vendor_fod, vendor_fingerprint_prop)

# Allow binder communication with the OnePlus display HAL.
binder_call(vendor_fod, hal_display)
